<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" sizes="48x48" href="/images/sbecagolfav48.png" />
    <title>Playwright Locators Demo - Test Apps</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
      :root {
        --text: #e2e8f0;
        --muted: #94a3b8;
        --bg: #0f172a;
        --surface: #1e293b;
        --border: #334155;
        --primary: #10b981;
        --accent: #0284c7;
        --danger: #ef4444;
      }
      :root[data-theme="light"] {
        --text: #0f172a;
        --muted: #475569;
        --bg: #f8fafc;
        --surface: #ffffff;
        --border: #e2e8f0;
        --primary: #0ea5e9;
        --accent: #10b981;
        --danger: #ef4444;
      }
      * { box-sizing: border-box; margin: 0; padding: 0; }
      body { 
        font-family: 'Inter', sans-serif; 
        color: var(--text); 
        background: var(--bg); 
        min-height: 100vh; 
        padding: 2rem 1rem;
        line-height: 1.6;
      }
      .container { 
        max-width: 900px; 
        margin: 0 auto;
      }
      .top { 
        display: flex; 
        align-items: center; 
        justify-content: space-between; 
        margin-bottom: 2rem; 
        gap: 1rem;
        flex-wrap: wrap;
      }
      .back { 
        color: var(--primary); 
        text-decoration: none; 
        font-weight: 600; 
      }
      .back:hover { text-decoration: underline; }
      h1 { 
        font-size: 1.75rem; 
        margin: 0;
      }
      .spacer { flex: 1; }
      .theme-toggle {
        appearance: none;
        border: none;
        background: none;
        cursor: pointer;
        color: var(--muted);
        font-size: 1.125rem;
        padding: 0;
        transition: color 0.2s ease;
      }
      .theme-toggle:hover {
        color: var(--text);
      }

      .intro {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        color: var(--muted);
      }

      .section {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: 8px;
        padding: 1.5rem;
        margin-bottom: 2rem;
      }

      .section h2 {
        color: var(--primary);
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        font-weight: 600;
      }

      .section-desc {
        color: var(--muted);
        font-size: 0.9rem;
        margin-bottom: 1rem;
        font-style: italic;
      }

      .content {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .button-group {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
      }

      button {
        appearance: none;
        border: 1px solid var(--border);
        background: rgba(255,255,255,.03);
        color: var(--text);
        padding: 0.65rem 1.25rem;
        border-radius: 6px;
        font-size: 0.95rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        font-family: 'Inter', sans-serif;
      }

      button:hover:not(:disabled) {
        background: rgba(255,255,255,.08);
        border-color: var(--primary);
      }

      button:active:not(:disabled) {
        transform: translateY(1px);
      }

      button:disabled {
        opacity: 0.5;
        cursor: not-allowed;
      }

      .btn-primary {
        background: linear-gradient(135deg, var(--primary), var(--accent));
        border: none;
        color: #081217;
        box-shadow: 0 4px 12px rgba(16,185,129,.2);
      }

      .btn-primary:hover {
        filter: brightness(1.1);
      }

      .btn-secondary {
        border-color: var(--accent);
        color: var(--accent);
      }

      .radio-group, .checkbox-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }

      .radio-group label, .checkbox-group label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        cursor: pointer;
      }

      input[type="radio"], input[type="checkbox"] {
        cursor: pointer;
      }

      nav.demo-nav {
        display: flex;
        gap: 1.5rem;
        padding: 0.75rem 0;
      }

      nav.demo-nav a {
        color: var(--text);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s;
      }

      nav.demo-nav a:hover {
        color: var(--primary);
      }

      ul {
        list-style-position: inside;
        color: var(--text);
      }

      li {
        padding: 0.25rem 0;
      }

      .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }

      label {
        font-weight: 500;
        color: var(--text);
      }

      input[type="text"], input[type="email"], input[type="search"] {
        padding: 0.65rem;
        border: 1px solid var(--border);
        border-radius: 6px;
        background: rgba(255,255,255,.03);
        color: var(--text);
        font-size: 0.95rem;
        font-family: 'Inter', sans-serif;
        transition: border-color 0.2s;
      }

      input[type="text"]:focus, input[type="email"]:focus, input[type="search"]:focus {
        outline: none;
        border-color: var(--primary);
      }

      .image-group {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
      }

      .demo-image {
        width: 120px;
        height: 120px;
        border-radius: 6px;
        border: 1px solid var(--border);
        object-fit: cover;
      }

      .icon-button {
        width: 40px;
        height: 40px;
        padding: 0;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
      }

      .card {
        background: rgba(255,255,255,.03);
        border: 1px solid var(--border);
        border-radius: 6px;
        padding: 1rem;
      }

      .card h3 {
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
      }

      .fallback-note {
        background: rgba(239,68,68,.1);
        border: 1px solid rgba(239,68,68,.3);
        border-radius: 6px;
        padding: 1rem;
        color: var(--text);
        font-size: 0.9rem;
      }

      .fallback-note strong {
        color: var(--danger);
      }

      .complex-element {
        background: linear-gradient(135deg, rgba(16,185,129,.1), rgba(2,132,199,.1));
        border: 2px dashed var(--border);
        padding: 1rem;
        border-radius: 6px;
        text-align: center;
      }

      h3 {
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
      }

      p {
        margin-bottom: 0.5rem;
      }

      .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        white-space: nowrap;
        border: 0;
      }
    </style>
  </head>
  <body>
    <main class="container">
      <div class="top">
        <a href="/test-apps" class="back">‚Üê Back</a>
        <h1>Playwright Locators Demo</h1>
        <div class="spacer"></div>
        <button id="themeToggle" class="theme-toggle" aria-label="Toggle dark/light mode">‚òÄ</button>
      </div>

      <div class="intro">
        <p><strong>Practice Playwright locator strategies</strong> with this interactive demo. Each section demonstrates a different locator method from the Playwright documentation. Use this page to learn and test different ways to locate elements.</p>
      </div>

      <!-- Section 1: getByRole -->
      <section class="section">
        <h2>1. getByRole()</h2>
        <p class="section-desc">Locate elements by their ARIA role and accessible name. This is the most resilient locator strategy.</p>
        <div class="content">
          <div class="button-group">
            <button role="button" class="btn-primary">Primary Button</button>
            <button role="button" class="btn-secondary">Secondary Button</button>
            <button role="button" disabled>Disabled Button</button>
          </div>
          
          <div class="checkbox-group">
            <label>
              <input type="checkbox" role="checkbox" id="terms" />
              <span>I agree to the terms and conditions</span>
            </label>
          </div>

          <div class="radio-group">
            <label>
              <input type="radio" role="radio" name="plan" value="basic" />
              <span>Basic Plan</span>
            </label>
            <label>
              <input type="radio" role="radio" name="plan" value="pro" />
              <span>Pro Plan</span>
            </label>
            <label>
              <input type="radio" role="radio" name="plan" value="enterprise" />
              <span>Enterprise Plan</span>
            </label>
          </div>

          <nav class="demo-nav" role="navigation" aria-label="Main navigation">
            <a href="#home">Home</a>
            <a href="#about">About</a>
            <a href="#contact">Contact</a>
          </nav>
        </div>
      </section>

      <!-- Section 2: getByText -->
      <section class="section">
        <h2>2. getByText()</h2>
        <p class="section-desc">Locate elements by their text content. Useful for finding elements with specific visible text.</p>
        <div class="content">
          <p>This is a paragraph with specific text content that can be located.</p>
          
          <h2>Welcome to Testing</h2>
          <h3>Playwright Makes Testing Easy</h3>
          
          <ul>
            <li>First list item with unique text</li>
            <li>Second list item for testing</li>
            <li>Third item in the list</li>
            <li>Final list item here</li>
          </ul>
        </div>
      </section>

      <!-- Section 3: getByLabel -->
      <section class="section">
        <h2>3. getByLabel()</h2>
        <p class="section-desc">Locate form controls by their associated label text. Best for form inputs.</p>
        <div class="content">
          <div class="form-group">
            <label for="fullname">Full Name</label>
            <input type="text" id="fullname" />
          </div>
          
          <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" />
          </div>
        </div>
      </section>

      <!-- Section 4: getByPlaceholder -->
      <section class="section">
        <h2>4. getByPlaceholder()</h2>
        <p class="section-desc">Locate input elements by their placeholder text.</p>
        <div class="content">
          <div class="form-group">
            <input type="search" placeholder="Search for products..." />
          </div>
          
          <div class="form-group">
            <input type="text" placeholder="Enter your username" />
          </div>
        </div>
      </section>

      <!-- Section 5: getByAltText -->
      <section class="section">
        <h2>5. getByAltText()</h2>
        <p class="section-desc">Locate images and elements by their alt text attribute.</p>
        <div class="content">
          <div class="image-group">
            <img src="https://picsum.photos/seed/profile/120/120" alt="User profile picture" class="demo-image" />
            <img src="https://picsum.photos/seed/logo/120/120" alt="Company logo" class="demo-image" />
            <img src="https://picsum.photos/seed/product/120/120" alt="Product thumbnail" class="demo-image" />
          </div>
        </div>
      </section>

      <!-- Section 6: getByTitle -->
      <section class="section">
        <h2>6. getByTitle()</h2>
        <p class="section-desc">Locate elements by their title attribute, often used for tooltips.</p>
        <div class="content">
          <div style="display: flex; align-items: center; gap: 1rem; flex-wrap: wrap;">
            <div class="button-group">
              <button class="icon-button" title="Edit item" data-action-name="Edit">‚úèÔ∏è</button>
              <button class="icon-button" title="Delete item" data-action-name="Delete">üóëÔ∏è</button>
              <button class="icon-button" title="Share item" data-action-name="Share">üì§</button>
            </div>
            <span id="button-feedback" title="ButtonActionFeedback" style="color: var(--primary); font-weight: 600; min-height: 1.5rem;"></span>
          </div>
          
          <p>
            <span title="This is a tooltip">Hover over this text</span> to see the title attribute in action.
          </p>
        </div>
      </section>

      <!-- Section 7: getByTestId -->
      <section class="section">
        <h2>7. getByTestId()</h2>
        <p class="section-desc">Locate elements by their data-testid attribute. Useful for elements that change frequently.</p>
        <div class="content">
          <div class="card" data-testid="user-card">
            <h3>User Profile Card</h3>
            <p>This card has a data-testid attribute for reliable testing.</p>
          </div>
          
          <div data-testid="dynamic-content">
            <p>Dynamic content area: <strong id="timestamp">Loading...</strong></p>
          </div>
        </div>
      </section>

      <!-- Section 8: CSS Locator -->
      <section class="section">
        <h2>8. CSS Locator (Fallback)</h2>
        <p class="section-desc">Use CSS selectors as a last resort when semantic locators aren't available.</p>
        <div class="content">
          <div class="fallback-note">
            <strong>‚ö†Ô∏è Use CSS locators sparingly!</strong> They're brittle and break easily when the DOM structure changes. Always prefer semantic locators (role, label, text) first.
          </div>
          
          <div class="complex-element">
            <div class="nested-content">
              <span class="hard-to-target">This element is deliberately hard to target semantically</span>
            </div>
          </div>
        </div>
      </section>
    </main>

    <script>
      // Theme toggle functionality
      (function() {
        const root = document.documentElement;
        const savedTheme = localStorage.getItem('login-theme');
        const prefersLight = window.matchMedia && window.matchMedia('(prefers-color-scheme: light)').matches;
        const initialTheme = savedTheme || (prefersLight ? 'light' : 'dark');
        
        if (savedTheme) {
          root.setAttribute('data-theme', savedTheme);
          const themeToggle = document.getElementById('themeToggle');
          if (themeToggle) themeToggle.textContent = savedTheme === 'light' ? '‚òæ' : '‚òÄ';
        } else {
          root.setAttribute('data-theme', initialTheme);
          const themeToggle = document.getElementById('themeToggle');
          if (themeToggle) themeToggle.textContent = initialTheme === 'light' ? '‚òæ' : '‚òÄ';
          localStorage.setItem('login-theme', initialTheme);
        }

        const themeToggle = document.getElementById('themeToggle');
        if (themeToggle) {
          themeToggle.addEventListener('click', () => {
            const isLight = root.getAttribute('data-theme') === 'light' ? false : true;
            root.setAttribute('data-theme', isLight ? 'light' : 'dark');
            themeToggle.textContent = isLight ? '‚òæ' : '‚òÄ';
            localStorage.setItem('login-theme', isLight ? 'light' : 'dark');
          });
        }

        // Update timestamp in dynamic content
        const timestampEl = document.getElementById('timestamp');
        if (timestampEl) {
          setInterval(() => {
            timestampEl.textContent = new Date().toLocaleTimeString();
          }, 1000);
        }

        // Handle icon button clicks in getByTitle section
        const buttonFeedback = document.getElementById('button-feedback');
        document.querySelectorAll('.icon-button').forEach(btn => {
          btn.addEventListener('click', (e) => {
            const target = e.target;
            if (target instanceof HTMLElement) {
              const actionName = target.getAttribute('data-action-name');
              if (buttonFeedback && actionName) {
                buttonFeedback.textContent = `${actionName} button clicked!`;
                setTimeout(() => {
                  buttonFeedback.textContent = '';
                }, 5000);
              }
            }
          });
        });

        // Add simple interactivity to other buttons
        document.querySelectorAll('button:not(#themeToggle):not(:disabled):not(.icon-button)').forEach(btn => {
          btn.addEventListener('click', (e) => {
            const target = e.target;
            if (target instanceof HTMLElement) {
              const originalText = target.textContent;
              target.textContent = '‚úì Clicked!';
              setTimeout(() => {
                target.textContent = originalText;
              }, 1000);
            }
          });
        });
      })();
    </script>
  </body>
</html>

---
// CookieConsent.astro - A GDPR compliant cookie consent banner
---

<div id="cookie-consent" class="cookie-consent hidden">
  <div class="cookie-content">
    <div class="cookie-text">
      <h3>Cookie Notice</h3>
      <p>This website uses cookies for analytics to improve your experience. We won't set non-essential cookies until you accept.</p>
    </div>
    <div class="cookie-buttons">
      <button id="cookie-accept" class="cookie-btn accept">Accept</button>
      <button id="cookie-decline" class="cookie-btn decline">Decline</button>
    </div>
  </div>
</div>

<style>
  .cookie-consent {
    position: fixed;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    width: 90%;
    max-width: 36rem;
    background-color: var(--bg-accent, #1e293b);
    border: 1px solid var(--border-color, #334155);
    border-radius: 8px;
    padding: 1.25rem;
    z-index: 1000;
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.3);
    transition: opacity 0.3s, transform 0.4s;
  }
  
  .cookie-consent.hidden {
    opacity: 0;
    transform: translate(-50%, 5rem);
    pointer-events: none;
  }
  
  .cookie-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .cookie-text h3 {
    font-size: 1.125rem;
    margin-bottom: 0.5rem;
    color: var(--text-color, #e2e8f0);
  }
  
  .cookie-text p {
    font-size: 0.9375rem;
    color: var(--text-light, #94a3b8);
    margin: 0;
  }
  
  .cookie-buttons {
    display: flex;
    gap: 0.75rem;
  }
  
  .cookie-btn {
    padding: 0.5rem 1.25rem;
    border-radius: 6px;
    font-weight: 500;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.2s;
    border: none;
  }
  
  .cookie-btn.accept {
    background-color: var(--primary-color, #10b981);
    color: #fff;
  }
  
  .cookie-btn.accept:hover {
    background-color: var(--primary-hover, #059669);
  }
  
  .cookie-btn.decline {
    background-color: transparent;
    color: var(--text-color, #e2e8f0);
    border: 1px solid var(--border-color, #334155);
  }
  
  .cookie-btn.decline:hover {
    background-color: rgba(255, 255, 255, 0.05);
  }
  
  @media (min-width: 640px) {
    .cookie-content {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
    
    .cookie-text {
      flex: 1;
    }
  }
</style>

<script>
  // Initialize the cookie consent functionality
  document.addEventListener('DOMContentLoaded', () => {
    const cookieConsent = document.getElementById('cookie-consent');
    const acceptBtn = document.getElementById('cookie-accept');
    const declineBtn = document.getElementById('cookie-decline');
    
    // Check if user has already made a choice
    const cookieChoice = localStorage.getItem('cookie-consent');
    
    // If no choice has been made, show the banner
    if (!cookieChoice) {
      setTimeout(() => {
        cookieConsent?.classList.remove('hidden');
      }, 1000);
    } else if (cookieChoice === 'accepted') {
      // If cookies were accepted, load analytics
      loadAnalytics();
    }
    
    // Set up event listeners for the buttons
    acceptBtn?.addEventListener('click', () => {
      localStorage.setItem('cookie-consent', 'accepted');
      cookieConsent?.classList.add('hidden');
      loadAnalytics();
    });
    
    declineBtn?.addEventListener('click', () => {
      localStorage.setItem('cookie-consent', 'declined');
      cookieConsent?.classList.add('hidden');
    });
  });

  // Function to load Google Analytics
  function loadAnalytics() {
    // Create and append Google Analytics script
    const gtagScript = document.createElement('script');
    gtagScript.async = true;
    gtagScript.src = 'https://www.googletagmanager.com/gtag/js?id=G-HDYYD92WHW';
    document.head.appendChild(gtagScript);
    
    // Initialize gtag
    window.dataLayer = window.dataLayer || [];
    function gtag() {
      dataLayer.push(arguments);
    }
    gtag('js', new Date());
    gtag('config', 'G-HDYYD92WHW');
  }
</script>
